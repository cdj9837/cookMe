<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inventory"
    android:background="@drawable/inventory_background">

    <ListView
        android:id="@+id/itemList"
        android:layout_width="match_parent"
        android:layout_height="594dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-6dp"
        android:layout_marginBottom="86dp">

    </ListView>

    <Button
        android:id="@+id/addItem"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/plus_square_button" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="238dp"
        android:layout_marginBottom="9dp"
        android:layout_toStartOf="@+id/addItem"
        android:background="@drawable/back_button" />

    <Button
        android:id="@+id/addUser"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/addItem"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="605dp"
        android:background="@drawable/plus_round_button" />

</RelativeLayout>