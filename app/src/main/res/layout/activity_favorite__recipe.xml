<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recipe_updated_01"
    tools:context=".Recipe_Main">

    <ListView
        android:id="@+id/fav_recipe_listview"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="110dp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="35dp"
        android:paddingRight="5dp"
        android:text="# of missing ingredients"
        android:textAlignment="textEnd"
        android:textColor="#eddbcd" />

    <Button
        android:id="@+id/all_recipe_button"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:text="All Recipes" />

    <Button
        android:id="@+id/favorite_recipe_button"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="210dp"
        android:layout_marginTop="55dp"
        android:text="Favorite" />
    <Button
        android:id="@+id/home_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="248dp"
        android:layout_marginBottom="660dp"
        android:layout_toStartOf="@+id/doneButton"
        android:background="@drawable/home_button" />

</RelativeLayout>