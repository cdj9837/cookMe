<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eddbcd"
    tools:context=".RecipeInfoActivity">

    <TextView
        android:id="@+id/recipeInfoNameTV"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background=" #5c7f89"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#eddbcd"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recipeInfoDirectionsTV"
        android:layout_width="0dp"
        android:layout_height="272dp"
        android:paddingLeft="5dp"
        android:scrollbars="vertical"
        android:text="TextView"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/ingredientLV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipeInfoNameTV" />

    <ListView
        android:id="@+id/ingredientLV"
        android:layout_width="0dp"
        android:layout_height="348dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipeInfoDirectionsTV" />

    <Button
        android:id="@+id/addToGroceryBTN"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/add_to_grocery_thin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredientLV" />

    <Button
        android:id="@+id/makeBTN"
        android:layout_width="142dp"
        android:layout_height="50dp"
        android:background="@drawable/make"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredientLV" />

    <Button
        android:id="@+id/favorite_BTN"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="1340dp"
        android:layout_marginLeft="375dp"
        android:background="@drawable/favorite_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredientLV" />
</androidx.constraintlayout.widget.ConstraintLayout>